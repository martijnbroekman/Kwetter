@using Kwetter.Models
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}
<div class="container">
    <div class="text-center sign-in-body">
        <form class="form-signin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <img class="mb-4" src="~/images/twitter-logo.svg" alt="" width="72" height="72">
            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
            <div asp-validation-summary="All" class="text-danger"></div>
            <span asp-validation-for="UserName" class="text-danger"></span>
            <span asp-validation-for="Password" class="text-danger"></span>
            <label class="sr-only">Username</label>
            <input asp-for="UserName" class="form-control top-control" placeholder="Username" required="" autofocus="" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;" autocomplete="off" type="text">
            <label class="sr-only">Password</label>
            <input asp-for="Password" class="form-control bottom-control" placeholder="Password" required="" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;" autocomplete="off" type="password">
            <div class="checkbox mb-3">
                <label>
                    <input asp-for="RememberMe" type="checkbox"> Remember me
                </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
