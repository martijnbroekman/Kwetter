@{
    ViewData["Title"] = "User management";
}
<div class="row">
    <h2 class="col col-12">User management</h2>
</div>
<hr />
<div class="container" id="userTableLoadingBar">
    <div class="progress">
        <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 100%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
</div>
<div id="usersTableContainer" style="display:none">
    <table id="userDatatable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Username</th>
                <th>Name</th>
                <th>E-mail</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
<div id="userDetailsContainer"></div>
@Html.Partial("~/Views/UserManagement/Partials/UsersTemplate.cshtml")
@section scripts
    {
    <script type="text/javascript" charset="utf8" src="~/lib/handlebars/handlebars.min.js"></script>
    <script type="text/javascript" charset="utf8" src="~/lib/datatables/media/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" charset="utf8" src="~/lib/datatables/media/js/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript" charset="utf8" src="~/lib/sweetalert2/dist/sweetalert2.all.min.js"></script>
    <script type="text/javascript" charset="utf8" src="~/js/datatables.helpers.js"></script>
    <script type="text/javascript" charset="utf8" src="~/js/datatables.js"></script>
    <script type="text/javascript" charset="utf8" src="~/js/usermanagement.js"></script>
    <script type="text/javascript">
        var getAllUsersUrl = '/Users/withRoles';
    </script>
}
